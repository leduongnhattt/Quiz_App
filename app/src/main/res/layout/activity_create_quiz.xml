<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createQuiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    android:padding="16dp"
    tools:context="Activity.CreateQuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:gravity="start">

        <ImageButton
            android:id="@+id/imageButtonBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ripple_effect"
            app:srcCompat="@drawable/icon_back"
            android:contentDescription="Back Button"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <EditText
        android:id="@+id/editTextQuizTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tiêu đề quiz"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextQuizSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập phụ đề quiz"
        android:inputType="text"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập câu hỏi"
        android:inputType="text"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextCorrectAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập đáp án đúng"
        android:inputType="text"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextOption1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập lựa chọn 1"
        android:inputType="text"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextOption2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập lựa chọn 2"
        android:inputType="text"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextOption3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập lựa chọn 3"
        android:inputType="text"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextOption4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập lựa chọn 4"
        android:inputType="text"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonSaveQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="Lưu Câu Hỏi" />
</LinearLayout>
